= wrap_layout :layout do

  - if is_blog_article?
    %article
      %header.article__header
        %h2.article__title= current_article.title
        %section.article__info
          %section.article__meta
            %dl.time
              %dt.time__title written
              %time.date{ :datetime => "#{current_article.date}" }
                = current_article.date.strftime("%B %e, %Y")
            %dl.tags
              - if current_article.tags.present?
                %dt.tags__title about
                %dd.tags__item
                  - current_article.tags.each do |tag|
                    = link_to tag, tag_path(tag), class: "tags__link"
          %h3.article__description=current_article.metadata[:page]["description"]

      %section.article__body
        = yield

      %nav.pagination--summary
        - if current_article
          - current_index = blog.articles.index(current_article)
          - next_blog = blog.articles[current_index - 1] if current_index > 0
          - prev_blog = blog.articles[current_index + 1] if current_index < blog.articles.length - 1
          %ol.pagination--summary__list
            %li.pagination--summary__item.pagination--summary--prev
              - if prev_blog
                = link_to prev_blog.url, class: "pagination--summary__link" do
                  %h7.pagination--summary__heading previous article
                  %dl.time
                    %time.date{ :datetime => "#{prev_blog.date}" }
                      = prev_blog.date.strftime("%B %e, %Y")
                  %h4= prev_blog.title
            %li.pagination--summary__item.pagination--summary--next
              - if next_blog
                = link_to next_blog.url, class: "pagination--summary__link" do
                  %h7.pagination--summary__heading next article
                  %dl.time
                    %time.date{ :datetime => "#{next_blog.date}" }
                      = next_blog.date.strftime("%B %e, %Y")
                  %h4= next_blog.title
